<div class="container">

	<nav class="navbar navbar-default" role="navigation">
	  <!-- Brand and toggle get grouped for better mobile display -->
	  <div class="navbar-header">
	    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	      <span class="sr-only">Toggle navigation</span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	    </button>
	    <a class="navbar-brand" href="../">ReelSearch</a>
	  </div>

	  <!-- Collect the nav links, forms, and other content for toggling -->
	  
	    <ul class="nav navbar-nav navbar-right">

	    <form class="navbar-form navbar-left" role="search">
	      <div class="form-group">
	        <input type="text" class="form-control" placeholder="Search">
	      </div>
	      <button type="submit" class="btn btn-default">Submit</button>
	    </form>


	</nav>


	<div id="myCarousel" class="carousel slide" data-ride="carousel">

		<!-- number of icons in indicator -->
		<ol class="carousel-indicators">
			<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
			<% i = 0 %>
			<% while i < (@info_arr.length - 1) %>
			<% i += 1 %>
			<li data-target="#myCarousel" data-slide-to= "1" ></li>
			<% end %>
		</ol>	

		<div class="carousel-inner">
			<div class ="item active">
				<% item_active = @info_arr.shift %>
				<div id = "poster" class = "col-md-4">
					<% if item_active["Poster"] != "N/A" %>
						<img id= "poster" src = '<%= item_active["Poster"] %>' > 
					<% else %>
						<img id = "no_poster" src = '../images/no_poster.jpg' >
					<%end%>
				</div>

				<div id = "info" class="col-md-8">
					<p id="info">
						<span>Title: </span> <%= item_active["Title"] %> <span>Year: </span><%= item_active["Year"] %> <br>
						<span>Rated: </span> <%= item_active["Rated"] %> <span>Released: </span><%= item_active["Released"] %> <br>
						<span>Runtime: </span> <%= item_active["Runtime"] %><span>Genre: </span><%= item_active["Genre"] %> <br>
						<span>Director: </span><%= item_active["Director"] %> <span>Actors: </span><%= item_active["Actors"] %> <br>
						<span>Plot: </span><%= item_active["Plot"] %> 
					</p>
				</div>
			</div>  
		




		
				<% @info_arr.map do |info_hash| %>
				<div class = "item">
					<div id = "poster" class = "col-md-4">
						<% if info_hash["Poster"] != "N/A" %>
							<img id= "poster" src = '<%= info_hash["Poster"] %>' > 
						<% else %>
							<img id = "no_poster" src = '../images/no_poster.jpg' >
						<%end%>
					</div>

					<div id = "info" class="col-md-8">
						<p id="info">
							<span>Title: </span> <%= info_hash["Title"] %> <span>Year: </span><%= info_hash["Year"] %> <br>
							<span>Rated: </span> <%= info_hash["Rated"] %> <span>Released: </span><%= info_hash["Released"] %> <br>
							<span>Runtime: </span> <%= info_hash["Runtime"] %><span>Genre: </span><%= info_hash["Genre"] %> <br>
							<span>Director: </span><%= info_hash["Director"] %> <span>Actors: </span><%= info_hash["Actors"] %> <br>
							<span>Plot: </span><%= info_hash["Plot"] %> 
						</p>
					</div>
				</div>  		
			<% end %>
		</div>
	</div>

</div>




