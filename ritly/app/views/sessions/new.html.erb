<div class = "container">


    <h1>Sign in</h1>
    <%= form_for(:session, url: sessions_path) do |f| %>
        <div class="row">
            <div class="span6 offset3">
            	<%= f.text_field :email, placeholder: "Email" %>
            </div>
        </div>

        <div class="row">
            <div class="span6 offset3">
            	<%= f.password_field :password, placeholder: "Password" %>
            </div>
        </div>

        <div class="row">
            <div class="span6 offset3">
            	<%= f.submit "Create", class: "btn btn-primary" %>
            </div>
        </div>

    <%end%>
    
</div>